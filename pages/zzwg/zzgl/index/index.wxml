    <scroll-view class="list-section" scroll-y='true'>
      <view class="non-data-section">
        <image class='non-data-icon' src="/icons/load_fail.png" />
        <view class="non-data-text">没有数据哎...</view>
      </view>
    </scroll-view>
  </swiper-item>
